# Builder Stage
FROM golang:1.21.1-alpine3.18 as builder

LABEL authors="serkantaskopru"

WORKDIR /app

COPY . .

RUN go mod download && CGO_ENABLED=0 GOOS=linux go build -o hospital-management main.go

# Production Stage
FROM scratch

COPY --from=builder /app/hospital-management .

EXPOSE 3000

CMD ["./hospital-management"]
